<div class="d-flex justify-content-between">
  <h1><%= @task.title %></h1>
  <%= link_to 'Edit this task', edit_task_path , class: 'btn btn-light fas fa-pencil-alt'%>
</div>

<p class="alert alert-secondary"><%= @task.details %></p>
<div class="form-check">
  <% if @task.completed %>
    <input class="form-check-input" type="checkbox" value="" checked>
    <label class="form-check-label" >This task is completed</label>
  <% else %>
    <input class="form-check-input" type="checkbox" value="">
    <label class="form-check-label">This task is not completed yet</label>
  <% end %>
</div>
<i class="fas fa-undo"></i>
<%= link_to 'Back to list', tasks_path %>
